@model AspireAppsWebApiViews.Models.AdacitySurvey

@{
    ViewBag.Title = "Add Survey";
}

<section class="panel panel-primary row myForm">
    <div class="panel-heading">
        <h3 class="panel-title">Add Survey Data</h3>
    </div>
    <div class="panel-body">
        @using (@Html.BeginRouteForm("AdacityAddSurveyAPIRoute", new { controller = "AdacitySurvey", httproute = true }, FormMethod.Post, new { @class = "myForm " }))
        {
            <div class="form-group">
                @Html.LabelFor(m => Model.AgeGroup)
                @Html.TextBoxFor(m => m.AgeGroup, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.AgeGroup)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => Model.Employment)
                @Html.TextBoxFor(m => m.Employment, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Employment)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => Model.Option)
                @Html.TextAreaFor(m => m.Option, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Option)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => Model.EmploymentCategory)
                @Html.TextBoxFor(m => m.EmploymentCategory, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.EmploymentCategory)
            </div>

            <button type="submit" class="btn btn-default">Submit</button>
        }
    </div>
</section>

<section class="panel panel-default row myForm">
    <div class="panel-heading">
        <h3 class="panel-title">Add survey using Json</h3>
    </div>
    <div class="panel-body">
        @using (@Html.BeginRouteForm("AdacityAddSurveyFromJsonAPIRoute", new { controller = "AdacitySurvey", httproute = true }, FormMethod.Post, new { @class = "myForm " }))
                {
            <textarea name="jsonString"></textarea>
            <button type="submit" class="btn btn-default">Submit</button>
                }
    </div>
</section>

<style type="text/css">
    .myForm {
        margin: 10px;
    }

    input[type=text], textarea {
        min-width: 450px;
    }
</style>